<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:model="clr-namespace:MyApp.Model" 
             x:Class="MyApp.View.DetailsView"             
             x:DataType="viewmodel:DetailsViewModel"
             Title="Character Details"
             BackgroundColor="#1B1B1B">

    <Shell.TitleView>
        <Label Text="Character"
               FontFamily="CinzelDecorative-Regular.ttf#Cinzel Decorative"
               TextColor="#FFD700"
               FontSize="24"
               HorizontalOptions="Center"
               BackgroundColor="#1B1B1B"/>
    </Shell.TitleView>

    <ContentPage.Resources>
        <Style x:Key="FantasyLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#F5DEB3"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <Style x:Key="FantasyEntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#2C2C2C"/>
            <Setter Property="TextColor" Value="#EAD7B7"/>
            <Setter Property="PlaceholderColor" Value="#AAAAAA"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="WidthRequest" Value="300"/>
        </Style>

        <Style x:Key="FantasyButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#3C2F2F"/>
            <Setter Property="TextColor" Value="#FFD700"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="HeightRequest" Value="40"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <HorizontalStackLayout Padding="10" Spacing="10">
            <Label Text="Emulator:" Style="{StaticResource FantasyLabelStyle}" />
            <Switch OnColor="#FFD700"
                    ThumbColor="#B8860B"
                    IsToggled="{Binding EmulatorON_OFF}"
                    VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Grid ColumnDefinitions="Auto, 1.5*, 1.5*, Auto"
              RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
              Padding="20"
              RowSpacing="15"
              ColumnSpacing="20">

            <!-- ID + Scan -->
            <Label Grid.Column="0" Grid.Row="0" Text="ID" Style="{StaticResource FantasyLabelStyle}" />

            <Entry Grid.Column="1"
                   Grid.Row="0"
                   Text="{Binding Id}"
                   Style="{StaticResource FantasyEntryStyle}"
                   HorizontalOptions="FillAndExpand" />

            <Entry Grid.Column="2"
                   Grid.Row="0"
                   Placeholder="Scan an ID here..."
                   Text="{Binding ManualScanId, Mode=TwoWay}"
                   ReturnType="Done"
                   Completed="OnEntryCompleted"
                   Style="{StaticResource FantasyEntryStyle}"
                   HorizontalOptions="FillAndExpand" />

            <!-- Name -->
            <Label Grid.Column="0" Grid.Row="1" Text="Name" Style="{StaticResource FantasyLabelStyle}" />
            <Entry Grid.Column="1"
                   Grid.Row="1"
                   Text="{Binding Name}"
                   Style="{StaticResource FantasyEntryStyle}"
                   HorizontalOptions="FillAndExpand"
                   Grid.ColumnSpan="2" />

            <!-- Image -->
            <Image Grid.Column="2" Grid.Row="2"
                   Source="{Binding SelectedPicture}"
                   HeightRequest="120"
                   WidthRequest="120"
                   Margin="5"
                   Aspect="AspectFill"
                   HorizontalOptions="Start" />

            <!-- Image button -->
            <Button Grid.Column="1" Grid.Row="2"
                    Text="CHOOSE AN IMAGE"
                    Command="{Binding OpenImagePopupCommand}"
                    Style="{StaticResource FantasyButtonStyle}"
                    HorizontalOptions="Start"
                    Grid.ColumnSpan="2" />

            <!-- Class -->
            <Label Grid.Column="0" Grid.Row="3" Text="Class" Style="{StaticResource FantasyLabelStyle}" />
            <Entry Grid.Column="1" Grid.Row="3"
                   Text="{Binding Class}"
                   Placeholder="Class"
                   Style="{StaticResource FantasyEntryStyle}"
                   HorizontalOptions="FillAndExpand"
                   Grid.ColumnSpan="2" />

            <!-- Race -->
            <Label Grid.Column="0" Grid.Row="4" Text="Race" Style="{StaticResource FantasyLabelStyle}" />
            <Entry Grid.Column="1" Grid.Row="4"
                   Text="{Binding Race}"
                   Placeholder="Race"
                   Style="{StaticResource FantasyEntryStyle}"
                   HorizontalOptions="FillAndExpand"
                   Grid.ColumnSpan="2" />

            <!-- Quote -->
            <Label Grid.Column="0" Grid.Row="5" Text="Quote" Style="{StaticResource FantasyLabelStyle}" />
            <Entry Grid.Column="1" Grid.Row="5"
                   Text="{Binding Quote}"
                   Placeholder="“I am the night.”"
                   Style="{StaticResource FantasyEntryStyle}"
                   HorizontalOptions="FillAndExpand"
                   Grid.ColumnSpan="2" />

            <!-- Submit -->
            <Button x:Name="MyAnimatedButton"
                    Grid.Column="1"
                    Grid.Row="6"
                    Text="Submit"
                    Style="{StaticResource FantasyButtonStyle}"
                    HorizontalOptions="Center"
                    Command="{Binding ChangeObjectParametersCommand}"
                    Clicked="MyAnimatedButton_Clicked"
                    IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BaseViewModel}}, Path=IsNotBusy}" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>
