<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             x:Class="MyApp.View.LoginView"
             Title="LoginView"
             BackgroundColor="#1B1B1B">

    <Shell.TitleView>
        <Label Text="Login"
               FontFamily="CinzelDecorative-Regular.ttf#Cinzel Decorative"
               TextColor="#FFD700"
               FontSize="24"
               HorizontalOptions="Center"
               BackgroundColor="#1B1B1B"/>
    </Shell.TitleView>

    <ContentPage.Resources>
        <Style x:Key="FantasyLabelTitleStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#FFD700"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <Style x:Key="FantasyLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#EAD7B7"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <Style x:Key="FantasyEntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#2C2C2C"/>
            <Setter Property="TextColor" Value="#F5DEB3"/>
            <Setter Property="PlaceholderColor" Value="#AAAAAA"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>

        <Style x:Key="FantasyButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#3C2F2F"/>
            <Setter Property="TextColor" Value="#FFD700"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="FontFamily" Value="CinzelDecorative-Regular.ttf#Cinzel Decorative"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Login" Style="{StaticResource FantasyLabelTitleStyle}" />

        <Entry Placeholder="Email"
               Text="{Binding Email}"
               Keyboard="Email"
               Style="{StaticResource FantasyEntryStyle}" />

        <Entry Placeholder="Password"
               Text="{Binding Password}"
               IsPassword="True"
               Style="{StaticResource FantasyEntryStyle}" />

        <Button Text="Log In"
                Command="{Binding LoginCommand}"
                Style="{StaticResource FantasyButtonStyle}" />

        <Label Text="Don't have an account yet?"
               Style="{StaticResource FantasyLabelStyle}" />

        <Button Text="Create an Account"
                Command="{Binding GoToRegisterCommand}"
                CommandParameter="0"
                Style="{StaticResource FantasyButtonStyle}"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
